= form_for @payment,  url: users_payments_path, html: { class: 'payment_form form-search' } do |f|
  -if @payment.errors.any?
    #error_explanation
      %h4= "#{pluralize(@payment.errors.count, "error")} prohibited this payment from being saved:"
      %ul
        - @payment.errors.full_messages.each do |msg|
          %li= msg

  = f.label :date_sent, 'Date'
  = f.date_select :date_sent, use_short_month: true, start_year: Date.today.year, end_year: (Date.today + 1.year).year
  = f.label :account_number, 'A/C #'
  = f.text_field :account_number
  = f.label :amount_sent, Setting.key(current_subdomain, 'currency_symbol')
  = f.text_field :amount_sent
  = f.label :scanned_proof, 'Proof of transfer'
  = f.file_field :scanned_proof
  = f.label :comments
  = f.text_field :comments
  = f.submit 'Add payment'
