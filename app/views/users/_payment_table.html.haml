- unless current_user.registration.payments.empty?
  %table.table.table-striped.table-bordered.table-condensed
    %thead
      %tr
        %th Date
        %th A/C #
        %th Amount sent
        %th Comments
        %th Proof
        %th Amount received
        %th Our comments
        %th

    - current_user.registration.payments.each do |p|
      %tr
        %td= p.date_sent
        %td=  p.account_number
        %td= number_to_currency p.amount_sent, unit: Setting.key('currency_symbol')
        %td= p.comments
        %td
          =link_to 'View', p.scanned_proof.url, 'data-popup' => true
        %td= number_to_currency p.amount_received, unit: Setting.key('currency_symbol')
        %td= p.admin_comment
        %td
          -unless p.confirmed?
            = link_to 'Delete', delete_payments_path(p), method: 'delete'

  :javascript
    $('a[data-popup]').live('click', function(e) { window.open($(this).attr('href')); e.preventDefault(); });
