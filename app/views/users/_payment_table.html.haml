- unless @registration.payments.empty?
  %h4.blue Payment history
  %table.table.table-striped.table-bordered.table-condensed
    %thead
      %tr
        %th Date
        %th Type
        %th A/C #
        %th Amount sent
        %th Comments
        %th Proof
        %th Amount received
        %th Status
        %th Our comments
        %th

    - @registration.payments.each do |p|
      %tr
        %td= p.date_sent
        %td= p.type.humanize
        %td= p.account_number
        %td= number_to_currency p.amount_sent, unit: current_tournament.currency_symbol 
        %td= p.comments
        %td
          - if p.respond_to?(:scanned_proof)
            =link_to 'View', p.scanned_proof.url, 'data-popup' => true
        %td= number_to_currency p.amount_received, unit: current_tournament.currency_symbol
        %td= p.status
        %td= p.admin_comment
        %td
          -if p.deleteable?
            = link_to 'Delete', payment_path(p), method: 'delete'


  :javascript
    $('a[data-popup]').live('click', function(e) { window.open($(this).attr('href')); e.preventDefault(); });
