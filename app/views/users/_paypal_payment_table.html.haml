- unless @registration.paypal_payments.empty?
  %h4.blue PayPal payment history
  %table.paypal-payment-history.table.table-striped.table-bordered.table-condensed
    %thead
      %tr
        %th ID
        %th Date
        %th Registration fees paid
        %th Transaction fees
        %th Status
        %th Host comments

    - @registration.paypal_payments.each do |p|
      %tr
        %td= p.id
        %td= p.created_at
        %td= tournament_currency p.registration_fees_as_convertible_money
        %td= tournament_currency p.fastrego_fees_as_convertible_money
        %td= p.status
        %td= p.admin_comment
