%section#profile_details
  %p
    %b Name:
    = current_user.name
  %p
    %b Email:
    = current_user.email
  %p
    %b Institution:
    = current_user.institution.name
  %p
    %b Phone number:
    = current_user.phone_number
%section#registration
  - if  Setting.key('enable_pre_registration')
    %p Registration is currently closed.
  - else
    = render 'registration_form'